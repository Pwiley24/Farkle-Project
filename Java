package com.example.farkleproject;

import static android.graphics.Color.argb;
import static android.graphics.Color.rgb;

import androidx.appcompat.app.AppCompatActivity;

import android.graphics.Color;
import android.graphics.ColorFilter;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.ImageButton;
import android.widget.ImageView;

public class MainActivity extends AppCompatActivity implements View.OnClickListener {

    ImageButton[][] imageButtons = new ImageButton[2][3]; //[row][col]
    Button roll;
    Button score;
    Button stop;
    String previousScoreDisplay;
    String newScoreDisplay;
    int newScore;
    //score points:
    int TRIPLEONE = 1000;
    int TRIPLETWO = 200;
    int TRIPLETHREE = 300;
    int TRIPLEFOUR = 400;
    int TRIPLEFIVE = 500;
    int TRIPLESIX = 600;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        imageButtons[0][0] = (ImageButton)this.findViewById(R.id.imageButton1);
        imageButtons[0][0].setOnClickListener(this);
        imageButtons[0][1] = (ImageButton)this.findViewById(R.id.imageButton2);
        imageButtons[0][1].setOnClickListener(this);
        imageButtons[0][2] = (ImageButton)this.findViewById(R.id.imageButton3);
        imageButtons[0][2].setOnClickListener(this);
        imageButtons[1][0] = (ImageButton)this.findViewById(R.id.imageButton4);
        imageButtons[1][0].setOnClickListener(this);
        imageButtons[1][1] = (ImageButton)this.findViewById(R.id.imageButton5);
        imageButtons[1][1].setOnClickListener(this);
        imageButtons[1][2] = (ImageButton)this.findViewById(R.id.imageButton6);
        imageButtons[1][2].setOnClickListener(this);



        for(int x = 0; x < 3; x++){
            for(int y = 0; y < 2; y++){
                //set border color to nothing
                imageButtons[y][x].setEnabled(true);
            }
        }

        roll = (Button)this.findViewById(R.id.roll_button);
        roll.setOnClickListener(this);
        score = (Button)this.findViewById(R.id.score_button);
       score.setOnClickListener(this);
        stop = (Button)this.findViewById(R.id.stop_button);
        stop.setOnClickListener(this);
    }





    public void onClick(View view){ //when a button is clicked
        int imgBtn_id = view.getId();


        boolean isColored = false;

        //use this area to determine the scoring totals
        if(imgBtn_id == 2131230934 ||
                imgBtn_id == 2131230935 ||
                imgBtn_id == 2131230936 ||
                imgBtn_id == 2131231199 ||
                imgBtn_id == 2131231200 ||
                imgBtn_id == 2131231201) { // id's of dice image 1, 2, 3, 4, 5, 6





            ImageButton imgBtn = (ImageButton) view;


            /*
             * I used code from Stack Overflow
             * URL: https://stackoverflow.com/questions/20121938/how-to-set-tint-for-an-image-view-programmatically-in-android
             * I used this code to make the background of my dice semi-transparent when clicked on.
             */
            imgBtn.setColorFilter(argb(150, 255, 255, 255));
            imgBtn.setEnabled(false);
                


          
                
            //track number of dice chosen
            int ones = 0;
            int twos = 0;
            int threes = 0;
            int fours = 0;
            int fives = 0;
            int sixes = 0;
            if (imgBtn.getDrawable().equals(R.drawable.dice1)){//if its drawable is dice 1
                ones++;
            }else if (imgBtn.getDrawable().equals(R.drawable.dice2)){ //if drawable is dice 2
                twos++;
            }else if (imgBtn.getDrawable().equals(R.drawable.dice3)){ //if drawable is dice 3
                threes++;
            }else if (imgBtn.getDrawable().equals(R.drawable.dice4)){ //if drawable is dice 4
                fours++;
            }else if (imgBtn.getDrawable().equals(R.drawable.dice5)){ //if drawable is dice 5
                fives++;
            }else if (imgBtn.getDrawable().equals(R.drawable.dice6)){ //if drawable is dice 6
                sixes++;
            }
            scorePoints(ones, twos, threes, fours, fives, sixes);


        }else { //if one of the bottom command buttons are pressed
            Button b = (Button) view;
            if (b.isEnabled()) {
                if (b.getText().equals("Roll")) { //when the roll button is clicked
                    rollDice();
                } else if (b.getText().equals("Score")) { //when the score button is clicked
                    System.out.println("it worked score");
                } else if (b.getText().equals("Stop")) { //when the stop button is clicked
                    System.out.println("it worked stop");
                }
            }
        }
    }

    
    public void scorePoints(int count1, int count2, int count3, int count4, int count5, int count6){
        //number of 1's
        if(count1 == 1){
            newScore += 100;
        }else if(count1 == 2){
            newScore += 200;
        }else if(count1 == 3){
            newScore += 1000;
        }else if(count1 <= 4){
            newScore += 1000 + 1000 * (count1 - 3);
        }

        //number of 2's
        if(count2 == 1){
            newScore += 0;
        }else if(count2 == 2){
            newScore += 0;
        }else if(count2 == 3){
            newScore += 200;
        }else if(count2 <= 4){
            newScore += 200 + 200 * (count2 - 3);
        }

        //number of 3's'
        if(count3 == 1){
            newScore += 0;
        }else if(count3 == 2){
            newScore += 0;
        }else if(count3 == 3){
            newScore += 300;
        }else if(count3 <= 4){
            newScore += 300 + 300 * (count3 - 3);
        }

        //number of 4's
        if(count4 == 1){
            newScore += 0;
        }else if(count4 == 2){
            newScore += 0;
        }else if(count4 == 3){
            newScore += 400;
        }else if(count4 <= 4){

        }

        //number of 5's
        if(count5 == 1){

        }else if(count5 == 2){

        }else if(count5 == 3){

        }else if(count5 <= 4){

        }

        //number of 6's
        if(count6 == 1){

        }else if(count6 == 2){

        }else if(count6 == 3){

        }else if(count6 <= 4){

        }
        
        
    }
    
    public void rollDice (){
        int diceNum;
        for(int x = 0; x < 3; x++) {
            for (int y = 0; y < 2; y++) {
                for (int i = 0; i < 6; i++) {
                    diceNum = (int) (Math.random() * 6) + 1;
                    if (diceNum == 1) {
                        /*
                         * I used stack overflow to write this line of code
                         * URL: https://stackoverflow.com/questions/19535571/how-to-change-imageview-source-in-android
                         * I used this code to change the image of my dice buttons.
                         */
                        imageButtons[y][x].setImageResource(R.drawable.dice1);
                    } else if (diceNum == 2) {
                        imageButtons[y][x].setImageResource(R.drawable.dice2);
                    } else if (diceNum == 3) {
                        imageButtons[y][x].setImageResource(R.drawable.dice3);
                    } else if (diceNum == 4) {
                        imageButtons[y][x].setImageResource(R.drawable.dice4);
                    } else if (diceNum == 5) {
                        imageButtons[y][x].setImageResource(R.drawable.dice5);
                    } else if (diceNum == 6) {
                        imageButtons[y][x].setImageResource(R.drawable.dice6);
                    }
                }
            }
        }
    }


}


}
